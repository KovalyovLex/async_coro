---
# Strict, modern clang-tidy configuration for C++ projects
# - Enables modernizing, correctness, performance and style checks
# - Treats all checks as errors (WarningsAsErrors: '*') to enforce fixes

Checks: >
  clang-analyzer-*,
  bugprone-*,
  performance-*,
  portability-*,
  readability-*,
  modernize-*,
  cppcoreguidelines-*,
  hicpp-*,
  readability-identifier-naming,
  hicpp-avoid-goto,
  -modernize-use-trailing-return-type,     # often noisy for codebases that prefer explicit returns

# Treat all warnings as errors to enforce fixes.
WarningsAsErrors: '*'

# Run checks over all headers in the project.
HeaderFilterRegex: 'async_coro'

# Ask clang-tidy to consider temporary dtors during analysis
AnalyzeTemporaryDtors: true

# Use project .clang-format when available
FormatStyle: file

# Fine-grained options for several checks.
CheckOptions:
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'

  - key: modernize-use-auto.MinTypeNameLength
    value: '0'

  - key: modernize-loop-convert.MinConfidence
    value: 'reasonable'

  - key: readability-braces-around-statements.ShortStatementLines
    value: '1'

  - key: cppcoreguidelines-pro-type-vararg.CheckFormat
    value: '1'

  - key: cppcoreguidelines-pro-type-reinterpret-cast.WarnOnCStyleCast
    value: '1'

  - key: hicpp-special-member-functions.IncludeDefaultCopyConstructor
    value: '1'

  - key: cppcoreguidelines-special-member-functions.AllowImplicitMove
    value: '0'

  - key: modernize-use-using.CheckAlpha
    value: '1'


